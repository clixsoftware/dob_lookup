<!DOCTYPE html>
<html>
  <head>
	
    <title><%= title %></title>

    <link rel='stylesheet' href='/stylesheets/app.css' />
	
  </head>
  <body>
	
	
	<header class='row' id='header'></header>
	
	<section class='row' id='main'>
		
	</section>
	
	
	<script src='/vendor/jquery/jquery.min.js' type='text/javascript'></script>
	
	<script src='/vendor/underscore/underscore-min.js' type='text/javascript'></script>
	
	<script src='/vendor/backbone/backbone-min.js' type='text/javascript'></script>
	
	<script src='/vendor/marionette/lib/backbone.marionette.js' type='text/javascript'></script>

	<script src='/app/app.js' type='text/javascript'></script>
	
	<script type='text/template' id='template-header'>
	
		
		<div class='columns twelve'>
		
		<h1><%= title %></h1>
		
		</div>
	
		<section id='searchBox' >
		
			<div class='columns four '>
			
				<input class='query' type='text' id="query" placeholder='Address . . .' />
			
			</div>
			
			<div class='columns four '>
			
				<input class='zip' class='columns four'type='text' id="zip" placeholder='Zip . . .' />
			
			</div>
			
			<div class='columns four '>
			
				<input class='button postfix' class='submit' type='submit' value='Search' />
			
			</div>
			
			<div class='columns eight'>
			
				<p class='searching-for'></p>
			
			</div>
			
			<div class='columns four'>
			
				<p class='count'></p>
			
			</div>
			

		</section>
	
	</script>
	
	<script type='text/template' id='template-main'>
	
		<div class='loader hidden'></div>
		
		<div class='error hidden'></div>
		
		<div class='list' id='complaintList'></div>

	</script>
	
	<script type='text/template' id='complaint-list'>
	
		<div id='complaints'>

		</div>
	
	</script>
	
	
	<script type='text/template' id='complaint-template'>
	
		<div class='columns eight'>
		
			<h4 class='item-title'>{{= descriptor }}</h4>
			
		</div>
		
		<div class='columns four'>
		
			<p><strong>Created</strong>: {{ var dl = new Date(created_date)  }} {{= ( dl.getUTCMonth()  + 1  ) + "/" +  dl.getDate() + "/" +  dl.getFullYear()  }}<br />
				
			   <strong>Closed</strong>: {{ if (closed_date !== null ) { }} {{ var cl = new Date(closed_date) }} {{= ( cl.getUTCMonth()  + 1  ) + "/" +  cl.getDate() + "/" +  cl.getFullYear() }} {{ } }}</p>

		
		</div>
	
	</script>
	

	
  </body>
</html>